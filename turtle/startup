-- add user programs to path
local path = shell.path()
path = path..":/bin/"
shell.setPath(path)

-- load apis
local api_path = "/lib/"
for _, api in pairs(fs.list(api_path))
do
  os.loadAPI(api_path .. api)
end

-- start parallel processing for apis
--[[parallel.waitForAny(
  function() shell.run("/rom/programs/shell") end,
  function() inventory.eventListen() end
)]]
  
